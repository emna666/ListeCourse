{% extends ":Front:base.html.twig" %}
{% block title %}
	Connexion
{% endblock %}
{% block body %}
	<div class="container">
        {% trans_default_domain 'FOSUserBundle' %}
        {% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

		<div class="row">
			<div class="col-md-8 col-lg-offset-4">
				<form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label for="username">{{ 'security.login.username'|trans }}</label>
								<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label for="username">{{ 'security.login.password'|trans }}</label>
								<input type="password" id="password" name="_password" required="required" class="form-control" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-4">
							<div class="form-group">
								<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
								<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
							</div>
						</div>
					</div>

					<input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
				</form>
			</div>
		</div>
	</div>

{% endblock %}
