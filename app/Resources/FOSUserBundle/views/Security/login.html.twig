{% extends ":Back:fosbase.html.twig" %}
{% block body %}


			<!-- start: LOGIN BOX -->
		<div class="box-login">
				<h3>Connectez vous </h3>
				<p>
					Merci d'enter votre mt de passe et login pour se connecter.
				</p>
    {% if error %}
    <div class="errorHandler alert alert-danger no-display">
						<i class="fa fa-remove-sign"></i> om utilisateur ou Mot de passe invalides
	</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	<fieldset>
		<div class="form-group">
			<span class="input-icon">
				<input type="text"  id="username" class="form-control" name="_username" placeholder="Login" value="{{ last_username }}" required="required">
				<i class="fa fa-user"></i> </span>
		</div>
		<div class="form-group form-actions">
			<span class="input-icon">
				<input type="password" id="password" class="form-control password" name="_password" placeholder="Mot de passe" required="required">
				<i class="fa fa-lock"></i>
				<a class="forgot" href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
			</span>
		</div>   
		<div class="form-actions">
			<label for="remember_me" class="checkbox-inline">
				<input type="checkbox" id="remember_me" class="grey remember"  name="_remember_me" value="on">
								Rester connecter
			</label>
			<input type="submit" id="_submit" name="_submit" class="btn btn-bricky pull-right" value="Connexion" />
		</div>
	</fieldset>
</form>
		</div>
{% endblock %}
