{% extends ":Back:base.html.twig" %}
{% block title %} Modifier mot de passe{% endblock %}
{% block body %}
<style>
    .form-horizontal div {
        display: table;
        margin: 10px 0;
        width: 100%;
    }
    .form-horizontal div label{
        float: left;
        width:40%;
        margin-bottom: 10px;
    }
    .form-horizontal div input{
        float: right;
        width:58%;
        margin-bottom: 10px;
    }
</style>
<div class="col-md-6">
    <h3>Modifier mot de passe</h3>
    <div class="well">
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'form-horizontal' } }) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="Modifier" class="btn btn-teal btn-block" style="width:30%;"/>
    </div>

    {{ form_end(form) }}
    </div>
{% endblock %}
