{% extends ":Back:base.html.twig" %}
{% block title %} Modifier Profil{% endblock %}
{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}

    <style>
        .form-horizontal div {
            display: table;
            margin: 10px 0;
            width: 100%;
        }
        .form-horizontal div label{
            float: left;
            width:40%;
            margin-bottom: 10px;
        }
        .form-horizontal div input{
            float: right;
            width:58%;
            margin-bottom: 10px;
        }
    </style>
  <div class="col-md-6">
    <h3>Modifier profil</h3>
    <div class="well">
    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'form-horizontal' } }) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="Modifier"  class="btn btn-teal btn-block" style="width:30%;"/>
    </div>
    {{ form_end(form) }}
{% endblock %}