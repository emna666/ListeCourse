{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des Coupons{% endblock %}
{% block description %}{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >Gestion des Coupons</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-2 col-md-offset-10 btn_ajout">
            <a class="btn btn-primary right " href="{{ path('back_general_coupon_ajouter') }}"><i class="fa fa-plus"></i>
                Ajouter coupon</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="row">
                            {{ formulaire.select2("col-md-6","Produit ",form.produit,false) }}
                        </div>
                        {{ formulaire.submit("Filtrer") }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Libelle</th>
                            <th>Promo</th>
                            <th>Produits</th>
                            <th class="center" >Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for coupon in coupons %}
                            <tr>
                                <td>{{ coupon.id }}</td>
                                <td> <img src="{{ asset('uploads/coupons/' ~ coupon.url) }}" style="max-width:50px;"></td>
                                <td>{{ coupon.libelle }}</td>
                                <td> {{ coupon.promo }}</td>
                                <td> {{ coupon.produit }}</td>

                                <td class="TableAction">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        {{ macros.tableEdit(path('back_general_coupon_modifier',{'id':coupon.id})) }}
                                        {{ macros.tableDelete(path('back_general_coupon_delete',{'id':coupon.id})) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}