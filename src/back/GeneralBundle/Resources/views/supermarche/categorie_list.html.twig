{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des Catégories{% endblock %}
{% block description %}{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >Gestion des Catégories</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-2 col-md-offset-10 btn_ajout">
            <a class="btn btn-primary right " href="{{ path('back_general_categorie_ajouter') }}"><i class="fa fa-plus"></i>
                Ajouter catégorie</a>
        </div>
    </div>
    <div class="clear"></div>
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Libelle</th>
                            <th>Image</th>
                            <th class="center" >Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td>{{ categorie.id }}</td>
                                <td>{{ categorie.libelle }}</td>
                                <td> <img src="{{ asset('uploads/categories/' ~ categorie.url) }}" style="max-width:50px;"></td>

                                <td class="TableAction">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        {{ macros.tableEdit(path('back_general_categorie_modifier',{'id':categorie.id})) }}
                                        {{ macros.tableDelete(path('back_general_categorie_delete',{'id':categorie.id})) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}