{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des Recettes{% endblock %}
{% block description %}{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >Gestion des Recettes</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-2 col-md-offset-10 btn_ajout">
            <a class="btn btn-primary right " href="{{ path('back_general_recette_ajouter') }}"><i class="fa fa-plus"></i>
                Ajouter recette</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="row">
                            {{ formulaire.select2("col-md-6","Produit ",form.produit,false) }}
                        </div>
                        {{ formulaire.submit("Filtrer") }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Libelle</th>
                            <th>Description</th>
                            <th>Produits</th>
                            <th class="center" >Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for recette in recettes %}
                            <tr>
                                <td>{{ recette.id }}</td>
                                <td> <img src="{{ asset('uploads/recettes/' ~ recette.url) }}" style="max-width:50px;"></td>
                                <td>{{ recette.libelle }}</td>
                                <td> {{ recette.shortDesc }}</td>
                                <td>{% for prod in recette.produit  %} {{ prod }} / {% endfor %}</td>

                                <td class="TableAction">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        {{ macros.tableEdit(path('back_general_recette_ajouter',{'id':recette.id})) }}
                                        {{ macros.tableDelete(path('back_general_recette_delete',{'id':recette.id})) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}