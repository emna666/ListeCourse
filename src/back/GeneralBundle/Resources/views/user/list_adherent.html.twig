{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des Adhérents{% endblock %}
{% block description %}{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >Gestion des Adhérents</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-2 col-md-offset-10 btn_ajout col-xs-12">
            <a class="btn btn-primary right" href="{{ path('back_general_adherent_ajouter') }}"><i class="fa fa-plus"></i>
                Ajouter Adhérent</a>
        </div>
    </div>
    <div class="clear"></div>
    <div class="row">
        <div class="col-md-12 col-x-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width dataTable"  id="sample_1">
                        <thead>
                        <tr>
                            <th >ID</th>
                            <th>Username</th>
                            <th class="hidden-xs">Email</th>
                            <th class="hidden-xs">Téléphone</th>
                            <th class="hidden-xs">Nom</th>
                            <th  class="hidden-xs">prénom</th>
                            <th class="hidden-xs">Supermarché</th>
                            <th class="center" >Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for adherent in adherents %}
                            <tr>
                                <td>{{ adherent.id }}</td>
                                <td>{{ adherent.username }}</td>
                                <td class="hidden-xs">{{ adherent.email }}</td>
                                <td class="hidden-xs">{{ adherent.telephone }}</td>
                                <td class="hidden-xs">{{ adherent.nom }}</td>
                                <td class="hidden-xs">{{ adherent.prenom}}</td>
                                <td class="hidden-xs">{{ adherent.supermarche}}</td>
                                <td class="TableAction center">
                                    <div class="visible-md visible-lg visible-xs">
                                        {{ macros.tableEdit(path('back_general_adherent_modifier',{'id':adherent.id})) }}
                                        {{ macros.tableDelete(path('back_general_adherent_delete',{'id':adherent.id})) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}