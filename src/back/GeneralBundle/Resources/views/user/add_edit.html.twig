{% extends ":Back:base.html.twig" %}
{% block title %}Client{% endblock %}
{% block description %}
    {% if app.request.get('id') is null %}Ajouter{% else %}Modifier{% endif %}
{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >{{ block('title') }}</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="row">
                            {{ formulaire.input("col-md-6","Nom ",form.nom,true) }}
                            {{ formulaire.input("col-md-6","Prénom",form.prenom,true) }}
                            {{ formulaire.input("col-md-6","Email",form.email,true) }}
                            {{ formulaire.input("col-md-6","Login",form.username,false) }}
                            {% if form.plainPassword is defined %}
                                {{ formulaire.input("col-md-6","Mot de passe",form.plainPassword.first,true) }}
                                {{ formulaire.input("col-md-6","Confirmation",form.plainPassword.second,true) }}
                            {% endif %}
                        </div>
                        <div class="row">
                            {{ formulaire.input("col-md-3","CIN",form.cin,false) }}
                            {{ formulaire.input("col-md-3","Télephone 1",form.telephone,false) }}
                            {{ formulaire.input("col-md-3","Téléphone 2",form.telephone2,false) }}
                            {{ formulaire.select2("col-md-3","localite",form.localite,false) }}

                        </div>

                        <div class="row">
                            {{ formulaire.input("col-md-6","Adresse",form.adresse,false) }}
                            {{ formulaire.input("col-md-6","Logo/Photo",form.file,false) }}
                        </div>
                        {{ formulaire.submit("Enregistrer") }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}