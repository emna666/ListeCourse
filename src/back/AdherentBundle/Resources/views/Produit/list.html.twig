{% extends ":Back:base.html.twig" %}
{% block title %}Gestion des Produits{% endblock %}
{% block description %}{% endblock %}
{% block topbody %}
    {{ parent() }}
    <li>
        <a href="javascript:void(0)" >Gestion des Produit</a>
    </li>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-2 col-md-offset-10 btn_ajout">
            <a class="btn btn-primary right " href="{{ path('back_general_produit_ajouter') }}"><i class="fa fa-plus"></i>
                Ajouter produit</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="row">
                            {{ formulaire.select2("col-md-6","Marque ",form.marque,false) }}
                        </div>
                        {{ formulaire.submit("Filtrer") }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-full-width table-condensed table-hover"  id="sample_1">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Logo</th>
                            <th>Libelle</th>
                            <th>Categorie</th>
                            <th>Marque</th>
                            <th class="center" >Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for produit in produits %}
                            <tr>
                                <td>{{ produit.id }}</td>
                                <td> <img src="{{ asset('uploads/produits/' ~ produit.url) }}" style="max-width:50px;"></td>
                                <td>{{ produit.libelle }}</td>
                                <td> {% for cat in produit.categories  %} {{ cat }} / {% endfor %}</td>
                                <td>{{ produit.marque }}</td>

                                <td class="TableAction">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                                        {{ macros.tableEdit(path('back_general_produit_modifier',{'id':produit.id})) }}
                                        {{ macros.tableDelete(path('back_general_produit_delete',{'id':produit.id})) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}